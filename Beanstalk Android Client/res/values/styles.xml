<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="ActionBarSeparator">
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:layout_width">2sp</item>
		<item
			name="android:background">@drawable/menu_stripe</item>
	</style>
	<style
		name="ActionBarIcon">
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:layout_width">@dimen/ActionBarHeight</item>
	</style>

	<style
		name="HomeButton">
		<item
			name="android:layout_gravity">center_vertical</item>
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:layout_weight">1</item>
		<item
			name="android:gravity">center_horizontal</item>
		<item
			name="android:textSize">@dimen/LargeTextSize</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:textColor">@color/homescreen_text</item>
		<item
			name="android:background">@null</item>
	</style>

	<style
		name="button"
		parent="android:Widget.Button">
		<item
			name="android:background">@drawable/bn_generic</item>
		<item
			name="android:textColor">@color/application_text_light</item>
		<item
			name="android:textSize">@dimen/LargeTextSize</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:layout_height">@dimen/button_height</item>
		<item
			name="android:layout_width">fill_parent</item>

	</style>
	<style
		name="edit_text"
		parent="android:Widget.EditText">
		<item
			name="android:layout_marginBottom">10dp</item>
		<item
			name="android:layout_marginLeft">10dp</item>
		<item
			name="android:layout_marginRight">10dp</item>
		<item
			name="android:padding">10dp</item>

		<item
			name="android:textSize">@dimen/MediumTextSize</item>
		<item
			name="android:background">@drawable/et_background</item>
	</style>
	<style
		name="edit_text_label"
		parent="android:Widget.TextView">
		<item
			name="android:layout_marginBottom">3dp</item>
		<item
			name="android:layout_marginLeft">10dp</item>
		<item
			name="android:layout_marginRight">10dp</item>


		<item
			name="android:textSize">@dimen/MediumTextSize</item>
		<item
			name="android:textColor">@color/black</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:layout_width">fill_parent</item>

	</style>
	<style
		name="white_title"
		parent="android:Widget.TextView">
		<item
			name="android:textColor">@color/application_text_light</item>
		<item
			name="android:textSize">@dimen/LargeTextSize</item>
		<item
			name="android:textStyle">bold</item>
	</style>
	<style
		name="body_small_dark"
		parent="android:Widget.TextView">
		<item
			name="android:textColor">@color/application_text_dark</item>
		<item
			name="android:textSize">@dimen/SmallTextSize</item>
	</style>
	<style
		name="button_shadow"
		parent="android:Widget.Button">
		<item
			name="android:background">@drawable/bn_shadow_slim</item>
		<item
			name="android:textColor">@color/application_text_light</item>
		<item
			name="android:textSize">@dimen/LargeTextSize</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:layout_width">fill_parent</item>
	</style>
</resources>
