<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <RelativeLayout
    android:background="@color/dark_entry_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <View
      android:id="@+id/colorLabel"
      android:background="@drawable/repository_labels"
      android:layout_width="@dimen/color_label_size"
      android:layout_height="@dimen/color_label_size"
      android:layout_marginRight="5dp"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="3dp"
      android:padding="2dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true" />
    <TextView
      style="@style/white_title"
      android:id="@+id/repoTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/colorLabel"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="5dp" />
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/repoTitle"
      android:layout_marginTop="15dp">
      <Button
        android:text="Releases"
        android:id="@+id/releases_button"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/dark_entry_bg"
        android:textStyle="bold"
        android:background="@drawable/changeset_details_selector_button"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
      </Button>
      <!-- TODO refactor name @drawable/changeset_details_selector_button -->
      <Button
        android:text="Servers"
        android:id="@+id/servers_button"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="1dp"
        android:textColor="@color/dark_entry_bg"
        android:textStyle="bold"
        android:background="@drawable/changeset_details_selector_button"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
      </Button>
    </LinearLayout>
  </RelativeLayout>
  <ListView
    android:id="@+id/releases_list"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:paddingTop="10dp" />
  <ExpandableListView
    android:id="@+id/servers_list"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:paddingTop="10dp"
    android:visibility="gone" />
</LinearLayout>
