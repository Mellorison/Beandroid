<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="10dp"
  android:paddingRight="10dp">
  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/sublist_entry_height"
    android:minHeight="@dimen/sublist_entry_height"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
      android:text="Loading servers..."
      android:id="@+id/refreshWidgetBody"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:textSize="@dimen/MediumTextSize"
      android:textColor="@color/black_night_rider" />

    <ProgressBar
      android:layout_marginLeft="15dp"
      android:layout_toRightOf="@id/refreshWidgetBody"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/commentsDownloadProgressBar"
      android:layout_centerVertical="true"
      style="@android:style/Widget.ProgressBar.Small"></ProgressBar>

  </RelativeLayout>

</FrameLayout>