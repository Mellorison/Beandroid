<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:minHeight="60dp"
	android:paddingRight="5dp"
	android:background="@color/dark_entry_bg">
	<ImageView
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:id="@+id/userGravatar"
		android:layout_alignParentLeft="true"
		android:layout_centerInParent="true"
		android:paddingLeft="2dp"
		android:layout_marginRight="10dp"></ImageView>

	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/topRow"
		android:layout_toRightOf="@id/userGravatar"
		android:layout_alignParentTop="true">
		<TextView
			android:layout_weight="7"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:id="@+id/revisionTextView"
			android:textSize="@dimen/MediumTextSize"
			android:textColor="@color/application_text_light"></TextView>
		<TextView
			android:gravity="right"
			android:layout_width="0dp"
			android:layout_weight="3"
			android:layout_height="wrap_content"
			android:id="@+id/date"
			android:textColor="@color/application_text_dark"
			android:textSize="@dimen/SmallTextSize"></TextView>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/middleRow"
		android:layout_toRightOf="@id/userGravatar"
		android:layout_below="@id/topRow">
		<TextView
			android:layout_width="0dp"
			android:layout_weight="7"
			android:layout_height="wrap_content"
			android:id="@+id/author"
			android:textSize="@dimen/SmallTextSize"
			android:textColor="@color/application_text_light"></TextView>
		<TextView
			android:gravity="right"
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_height="wrap_content"
			android:id="@+id/time"
			android:textColor="@color/application_text_dark"
			android:textSize="@dimen/SmallTextSize"></TextView>
	</TableRow>

	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/tableRow4"
		android:layout_toRightOf="@id/userGravatar"
		android:layout_below="@id/middleRow">
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/commitMessage"
			android:textSize="@dimen/MediumTextSize"
			android:textColor="@color/application_text_dark"></TextView>
	</TableRow>
</RelativeLayout>
