<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableRow
		android:layout_height="wrap_content"
		android:id="@+id/tableRow4"
		android:layout_width="fill_parent">
		<TextView
			android:text="Beanstalk client application"
			android:id="@+id/textView3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
	</TableRow>
	<TableRow
		android:layout_width="fill_parent"
		android:id="@+id/tableRow5"
		android:layout_height="wrap_content">
		<TextView
			android:text="Account domain: "
			android:id="@+id/textView4"
			android:layout_width="75dp"
			android:layout_height="wrap_content"
			></TextView>
		<EditText
			android:text="bartosz-filipowicz"
			android:id="@+id/accountdomain_edittext"
			android:textSize="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"></EditText>
		<!-- <TextView -->
		<!-- android:text=".beanstalk.com" -->
		<!-- android:id="@+id/textView5" -->
		<!-- android:layout_width="wrap_content" -->
		<!-- android:layout_height="wrap_content"></TextView> -->
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:id="@+id/tableRow1"
		android:layout_width="fill_parent">
		<TextView
			android:text="Login:"
			android:id="@+id/textView1"
			android:layout_width="75dp"
			android:layout_height="wrap_content"></TextView>
		<EditText
			android:text="bartoszfilipowicz"
			android:id="@+id/login_edittext"
			android:textSize="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"></EditText>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:id="@+id/tableRow2"
		android:layout_width="fill_parent">
		<TextView
			android:text="Password:"
			android:id="@+id/textView2"
			android:layout_width="75dp"
			android:layout_height="wrap_content"></TextView>
		<EditText
			android:text="applicake9"
			android:id="@+id/password_edittext"
			android:textSize="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:password="true"></EditText>
	</TableRow>
	<TableRow
		android:id="@+id/tableRow6"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<CheckBox
			android:text="Remeber me"
			android:id="@+id/rememberMeCheckBox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></CheckBox>
	</TableRow>

	<TableRow
		android:layout_height="wrap_content"
		android:id="@+id/tableRow3"
		android:layout_width="fill_parent">
		<Button
			android:text="Login"
			android:id="@+id/login_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>
	</TableRow>
</LinearLayout>
