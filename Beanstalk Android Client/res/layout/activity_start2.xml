<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:paddingBottom="50dp"
	android:background="@color/ApplicationBackground">
	<include
		layout="@layout/actionbar"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/ActionBarHeight"></include>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:padding="10dp">
		<Button
			style="@style/HomeButton"
			android:onClick="onHomeDashboardClick"
			android:text="Dashboard"
			android:drawableTop="@drawable/icon"></Button>
		<Button
			style="@style/HomeButton"
			android:drawableTop="@drawable/icon"
			android:text="Repositories"
			android:onClick="onHomeRepositoriesClick"></Button>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:padding="10dp">
		<Button
			style="@style/HomeButton"
			android:id="@+id/users_button"
			android:drawableTop="@drawable/icon"
			android:text="Users"
			android:onClick="onHomeUsersClick"></Button>
		<Button
			style="@style/HomeButton"
			android:id="@+id/deployment_button"
			android:drawableTop="@drawable/icon"
			android:text="Deployment"
			android:onClick="onHomeDeploymentClick"></Button>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:padding="10dp">
		<Button
			style="@style/HomeButton"
			android:id="@+id/account_settings_button"
			android:drawableTop="@drawable/icon"
			android:text="Account settings"
			android:onClick="onHomeSettingsClick"></Button>
	</LinearLayout>

</LinearLayout>
