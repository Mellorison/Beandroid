<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/selector_active">
	<include
		layout="@layout/actionbar" />
	<RelativeLayout
		android:background="@color/dark_entry_bg"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<View
			android:id="@+id/colorLabel"
			android:background="@drawable/repository_labels"
			android:layout_width="@dimen/color_label_size"
			android:layout_height="@dimen/color_label_size"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="3dp"
			android:padding="2dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"></View>

		<TextView
			style="@style/white_title"
			android:layout_toRightOf="@id/colorLabel"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:id="@+id/repoName"
			android:layout_height="wrap_content">
		</TextView>
		<TextView
			style="@style/body_small_dark"
			android:layout_toRightOf="@id/colorLabel"
			android:layout_below="@id/repoName"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:id="@+id/userName"
			android:layout_height="wrap_content">
		</TextView>
		<TextView
			style="@style/body_small_dark"
			android:layout_marginLeft="5dp"
			android:layout_toRightOf="@id/colorLabel"
			android:layout_below="@id/userName"
			android:layout_width="wrap_content"
			android:id="@+id/commitMessage"
			android:layout_height="wrap_content">
		</TextView>
		<TableRow
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/commitMessage"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/tableRow1"
			android:layout_marginTop="15dp">
			<Button
				android:text="Changeset"
				android:layout_marginRight="1dp"
				android:layout_marginLeft="10dp"
				android:textColor="@color/dark_entry_bg"
				android:textStyle="bold"
				android:background="@drawable/changeset_details_selector_button"
				android:padding="5dp"
				android:layout_weight="1"
				android:id="@+id/changesetButton"
				android:layout_width="0dp"
				android:layout_height="wrap_content">
			</Button>
			<Button
				android:text="Comments"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="1dp"
				android:textColor="@color/dark_entry_bg"
				android:textStyle="bold"
				android:background="@drawable/changeset_details_selector_button"
				android:padding="5dp"
				android:layout_weight="1"
				android:id="@+id/commentsButton"
				android:layout_width="0dp"
				android:layout_height="wrap_content">
			</Button>
		</TableRow>
	</RelativeLayout>
	<ListView
		android:paddingTop="10dp"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/changesList"
		android:cacheColorHint="#00000000"
		android:background="@color/selector_active"></ListView>

	<ListView
		android:paddingTop="10dp"
		android:layout_height="fill_parent"
		android:id="@+id/commentsList"
		android:layout_width="fill_parent"
		android:cacheColorHint="#00000000"
		android:background="@color/selector_active"></ListView>


</LinearLayout>
