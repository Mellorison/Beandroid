<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="250dp"
	android:layout_height="200dp"
	android:orientation="vertical">
	<TableRow
		android:layout_height="0dp"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:id="@+id/tableRow1">
		<Button
			android:text="White"
			android:id="@+id/buttonWhite"
			android:background="@drawable/label_white"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
		<Button
			android:text="Red"
			android:id="@+id/buttonRed"
			android:background="@drawable/label_red"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
		<Button
			android:text="Orange"
			android:id="@+id/buttonOrange"
			android:background="@drawable/label_orange"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
	</TableRow>
	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:id="@+id/tableRow2">
		<Button
			android:text="Yellow"
			android:id="@+id/buttonYellow"
			android:background="@drawable/label_yellow"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
		<Button
			android:text="Green"
			android:id="@+id/buttonGreen"
			android:background="@drawable/label_green"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
		<Button
			android:text="Button"
			android:id="@+id/buttonBlue"
			android:background="@drawable/label_blue"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
	</TableRow>
	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:weightSum="3"
		android:id="@+id/tableRow3">
		<Button
			android:text="Pink"
			android:id="@+id/buttonPink"
			android:background="@drawable/label_pink"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
		<Button
			android:text="Grey"
			android:id="@+id/buttonGrey"
			android:background="@drawable/label_grey"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>
		<Button
		android:visibility="invisible"
			android:layout_margin="2dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"></Button>

	</TableRow>
</LinearLayout>
